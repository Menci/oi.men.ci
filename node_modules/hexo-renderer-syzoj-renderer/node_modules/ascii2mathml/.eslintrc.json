{
  "env": {
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "ecmaVersion": "2017",
    "sourceType": "module"
  },
  "rules": {
    "arrow-spacing": [1, {"before": true, "after": true}],
    "block-scoped-var": 2,
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "camelcase": 1,
    "comma-dangle": [1, "never"],
    "comma-spacing": 1,
    "comma-style": 1,
    "consistent-this": [1, "self"],
    "consistent-return": 2,
    "curly": 1,
    "dot-notation": 1,
    "eol-last": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "handle-callback-err": 2,
    "keyword-spacing": 2,
    "max-depth": [1, 6],
    "max-nested-callbacks": [1, 4],
    "max-len": [1, 80, 1000],
    "new-cap": 1,
    "new-parens": 2,
    "no-alert": 2,
    "no-array-constructor": 2,
    "no-caller": 2,
    "no-catch-shadow": 2,
    "no-cond-assign": 2,
    "no-console": 1,
    "no-const-assign": 2,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-delete-var": 2,
    "no-dupe-keys": 2,
    "no-div-regex": 1,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-ex-assign": 2,
    "no-extend-native": 2,
    "no-extra-bind": 1,
    "no-extra-boolean-cast": 1,
    "no-extra-parens": [1, "all"],
    "no-extra-semi": 1,
    "no-floating-decimal": 1,
    "no-func-assign": 2,
    "no-implied-eval": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 1,
    "no-label-var": 2,
    "no-labels": 2,
    "no-lone-blocks": 1,
    "no-lonely-if": 1,
    "no-loop-func": 2,
    "no-mixed-requires": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 1,
    "no-native-reassign": 2,
    "no-negated-in-lhs": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-object": 2,
    "no-new-require": 2,
    "no-new-wrappers": 2,
    "no-obj-calls": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-path-concat": 1,
    "no-plusplus": 1,
    "no-redeclare": 2,
    "no-regex-spaces": 1,
    "no-return-assign": 2,
    "no-script-url": 1,
    "no-sequences": 2,
    "no-shadow": 1,
    "no-shadow-restricted-names": 2,
    "no-sparse-arrays": 2,
    "no-trailing-spaces": 1,
    "no-undef": 1,
    "no-undef-init": 1,
    "no-undefined": 1,
    "no-unreachable": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": 1,
    "no-use-before-define": [2, "nofunc"],
    "no-var": 1,
    "no-with": 2,
    "prefer-spread": 1,
    "quotes": [ 1, "double", "avoid-escape" ],
    "semi": 1,
    "semi-spacing": [1, { "before": false, "after": true }],
    "space-before-blocks": 1,
    "space-in-parens": [1, "never"],
    "space-infix-ops": 1,
    "space-unary-ops": 1,
    "spaced-comment": [1, "always", { "exceptions": ["/"] }],
    "strict": [2, "global"],
    "use-isnan": 1,
    "yoda": [1, "never"],
    "valid-typeof": 2
  }
}
